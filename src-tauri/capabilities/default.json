{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Main window capability (fs/opener/drag ë“±)",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "opener:default",
    "core:window:allow-start-dragging",
    {
      "identifier": "opener:allow-open-path",
      "allow": [
        { "path": "$HOME/**/*" },
        { "path": "$HOME/Library/Mobile Documents/**/*" }
      ]
    }
  ]
}
